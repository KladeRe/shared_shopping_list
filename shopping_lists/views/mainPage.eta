<% layout("./layouts/layout.eta") %>
<h1>Shared shopping lists</h1>

<% if (it.shopping_list_amount > 0) { %>
<ul>
    <li>Shopping lists: <%= it.shopping_list_amount%></li>
    <li>Shopping list items: <%= it.shopping_list_item_amount%></li>
</ul>

<% } else { %>
<p>No shopping lists yet.</p>
<% } %>

<a href="/lists">Lists</a>  